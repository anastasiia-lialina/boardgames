{
    "name": "lyalinaav/boardgames",
    "description": "Board games project",
    "keywords": ["board games", "yii2", "php", "game"],
    "homepage": "https://boardgames.localhost",
    "type": "application",
    "license": "BSD-3-Clause",
    "support": {
        "source": "https://github.com/anastasiia-lialina/boardgames"
    },
    "minimum-stability": "stable",
    "require": {
        "php": "^8.1",
        "yiisoft/yii2": "~2.0.45",
        "yiisoft/yii2-bootstrap5": "~2.0.2",
        "yiisoft/yii2-symfonymailer": "~2.0.3",
        "yiisoft/yii2-redis": "~2.0.0",
        "kartik-v/yii2-widget-datetimepicker": "^1.5",
        "webzop/yii2-notifications": "^0.2.0",
        "yiisoft/yii2-queue": "^2.3",
        "php-amqplib/php-amqplib": "^3.7",
        "enqueue/amqp-lib": "^0.10.27"
    },
    "require-dev": {
        "yiisoft/yii2-debug": "~2.1.0",
        "yiisoft/yii2-gii": "~2.2.0",
        "yiisoft/yii2-faker": "~2.0.0",
        "codeception/codeception": "^5.0.0",
        "codeception/lib-innerbrowser": "^4.0 || ^3.0 || ^1.1",
        "codeception/module-asserts": "^3.0 || ^1.1",
        "codeception/module-yii2": "^1.1",
        "codeception/module-filesystem": "^3.0 || ^2.0 || ^1.1",
        "codeception/verify": "^3.0 || ^2.2",
        "friendsofphp/php-cs-fixer": "^3.94"
    },
    "config": {
        "allow-plugins": {
            "yiisoft/yii2-composer" : true,
            "php-http/discovery": true
        },
        "process-timeout": 1800,
        "fxp-asset": {
            "enabled": false
        }
    },
    "scripts": {
        "post-install-cmd": [
            "yii\\composer\\Installer::postInstall"
        ],
        "post-create-project-cmd": [
            "yii\\composer\\Installer::postCreateProject",
            "yii\\composer\\Installer::postInstall"
        ],
        "fix": "php-cs-fixer fix --config=.php-cs-fixer.dist.php"
    },
    "extra": {
        "yii\\composer\\Installer::postCreateProject": {
            "setPermission": [
                {
                    "runtime": "0777",
                    "web/assets": "0777",
                    "yii": "0755"
                }
            ]
        },
        "yii\\composer\\Installer::postInstall": {
            "generateCookieValidationKey": [
                "config/web.php"
            ]
        }
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://asset-packagist.org"
        }
    ]
}
